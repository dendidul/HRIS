@model IEnumerable<HRIS.General.Model.PersonalAdmin.PeopleModel>

@{
    ViewData["Title"] = "List Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
        </div>
        <h4 class="panel-title">Employee</h4>
    </div>
    <div class="panel-body">
        <p>
            <a class="btn btn-pink" asp-action="Create">Create New</a>
        </p>
        <table class="table table-striped table-bordered" id="data-table-responsive" style="width:100%">
            <thead>
                <tr>

                    <th>
                        Employee ID
                    </th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Employee Status
                    </th>
                    <th>
                        Begin Date
                    </th>
                    <th>
                        End Date
                    </th>




                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @item.nik

                    </td>
                    <td>
                        @{ 
                           var EmployeeName =  item.first_name + " " + item.middle_name + " " + item.last_name;
                            @EmployeeName
                        }

                      
                    </td>
                    <td>
                        @item.status_employee

                    </td>
                    <td>
                        @{
                            if (item.hire_date.HasValue)
                            {
                                @item.hire_date.Value.ToString("dd-MM-yyyy")
                            }

                        }


                    </td>
                    <td>
                        @{
                            if (item.terminate_date.HasValue)
                            {
                                @item.terminate_date.Value.ToString("dd-MM-yyyy")
                            }

                        }

                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", "Area", new { id = item.id }, new { @class = "btn btn-success m-b-5" })
                        @Html.ActionLink("Details", "Details", "Area", new { id = item.id }, new { @class = "btn btn-warning m-b-5" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger m-b-5" })

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
            TableManageResponsive.init();
        });
    </script>
}
