@model HRIS.General.Model.Master.JobModel
@{
    ViewData["Title"] = "Edit Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Job", FormMethod.Post, new { Id = "formEditJob" }))
{
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Edit</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-6">
                    <label>Job Code</label>
                    @Html.HiddenFor(model => model.id, new { Class = "form-control" })
                    @Html.TextBoxFor(model => model.job_id, new { Class = "form-control", required = "true" })
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Short Desc</label>
                        @Html.TextBoxFor(model => model.short_desc, new { Class = "form-control", required = "true" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label>Long Desc</label>
                    @Html.TextAreaFor(model => model.long_desc, new { Class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="@Url.Action("Index","Job")" class="btn btn-warning">Cancel</a>
                </div>
            </div>

        </div>
    </div>



}




@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            App.init();
        });
    </script>
}


